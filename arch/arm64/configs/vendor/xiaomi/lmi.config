# Device Specific Board Configuration
CONFIG_BOARD_LMI=y

# Touchscreen
CONFIG_TOUCHSCREEN_FTS=y
CONFIG_TOUCHSCREEN_FTS_FOD=y

# Fingerprint
CONFIG_FINGERPRINT_GOODIX_FOD=y

# Enable MI US Proximity sensor
CONFIG_US_PROXIMITY=y

# Enable Camera Motor drivers
CONFIG_HALL_AKM09970=y
CONFIG_MOTOR_DRV8846=y

# Enable AW2015 RGB LED
CONFIG_LEDS_AW2015=y

# Power supply drivers
CONFIG_BQ2597X_CHARGE_PUMP=y
CONFIG_BATT_VERIFY_BY_DS28E16=y
CONFIG_ONEWIRE_GPIO=y

# Enable UFS TW/HPB
CONFIG_UFSFEATURE_31=y
CONFIG_UFSHPB_31=y
CONFIG_UFSTW_IGNORE_GUARANTEE_BIT_31=y
CONFIG_UFSTW_31=y
CONFIG_FS_HPB=y

# Enable OSS FOD
CONFIG_OSSFOD=y
